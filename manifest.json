{
  "manifest_version": 2,

  "name": "Empower",
  "description": "This extension lets you give others login permissions to your Gmail account.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://book.jetblue.com/*", "https://www.facebook.com/*", 
      "https://secure.its.yale.edu/cas/login*", "https://sso.brown.edu/idp/Authn/MCB", 
      "https://accounts.google.com/*"],
      "js": ["action.js"]
    }
  ],

  "browser_action": {
    "default_icon": "EmpowerLogo.png",
    "default_popup": "login.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}